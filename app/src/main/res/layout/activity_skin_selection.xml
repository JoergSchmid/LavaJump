<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/skin_selection_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/image_coin_skin_selection"
        android:src="@drawable/coin_ma"
        android:background="@null"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@id/tv_coins_skin_selection"
        android:layout_marginTop="@dimen/player_selection_margin_between"
        android:layout_marginEnd="@dimen/coin_image_side_margin" />

    <TextView
        android:id="@+id/tv_coins_skin_selection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/player_selection_margin_between"
        android:layout_marginEnd="@dimen/player_selection_side_margin"
        android:textSize="@dimen/highscore_subtitle_font_size"
        android:textColor="#000000" />

    <TableLayout
        android:id="@+id/layout_buy_skin"
        android:layout_width="@dimen/buy_view_width"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:stretchColumns="*"
        android:visibility="invisible">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/tv_buy_skin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/default_font_size"
                android:textStyle="bold"/>

        </TableRow>

        <TableRow
            android:layout_width="@dimen/buy_view_width"
            android:layout_height="wrap_content"
            android:gravity="bottom">

            <Button
                android:id="@+id/button_buy_skin_no"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/no"/>

            <Button
                android:id="@+id/button_buy_skin_yes"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/yes"/>

        </TableRow>

    </TableLayout>

    <ImageButton
        android:id="@+id/button_back_activity_skin_selection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="@dimen/button_side_margin"
        android:layout_marginBottom="@dimen/button_bottom_margin"
        android:adjustViewBounds="true"
        android:background="@null"
        android:maxWidth="@dimen/button_width"
        android:maxHeight="@dimen/button_height"
        android:scaleType="fitCenter"
        android:src="@drawable/back_highscore" />

    <ImageView
        android:id="@+id/skin_selected_0"
        android:layout_width="@dimen/player_selection_size"
        android:layout_height="@dimen/player_selection_size"
        android:background="@drawable/background_skin_selection"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:layout_marginStart="@dimen/skin_margin_side"
        android:layout_marginTop="@dimen/skin_margin_side" />

    <ImageView
        android:id="@+id/skin_selected_1"
        android:layout_width="@dimen/player_selection_size"
        android:layout_height="@dimen/player_selection_size"
        android:background="@drawable/background_skin_selection"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:layout_marginStart="@dimen/skin_margin_side"
        android:layout_marginTop="@dimen/skin_margin_side"
        android:layout_toEndOf="@id/skin_selected_0" />

    <ImageView
        android:id="@+id/skin_selected_2"
        android:layout_width="@dimen/player_selection_size"
        android:layout_height="@dimen/player_selection_size"
        android:background="@drawable/background_skin_selection"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:layout_marginStart="@dimen/skin_margin_side"
        android:layout_marginTop="@dimen/skin_margin_side"
        android:layout_below="@id/skin_selected_0" />

    <ImageView
        android:id="@+id/skin_selected_3"
        android:layout_width="@dimen/player_selection_size"
        android:layout_height="@dimen/player_selection_size"
        android:background="@drawable/background_skin_selection"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:layout_marginStart="@dimen/skin_margin_side"
        android:layout_marginTop="@dimen/skin_margin_side"
        android:layout_below="@id/skin_selected_1"
        android:layout_toEndOf="@id/skin_selected_2" />



    <ImageButton
        android:id="@+id/button_skin_red"
        android:src="@drawable/player_red"
        android:background="@null"
        android:layout_width="@dimen/skin_selection_size"
        android:layout_height="@dimen/skin_selection_size"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:layout_marginStart="@dimen/skin_margin_side"
        android:layout_marginTop="@dimen/skin_margin_side"
        android:layout_toEndOf="@id/skin_selected_1" />

    <ImageButton
        android:id="@+id/button_skin_yellow"
        android:src="@drawable/player_yellow"
        android:background="@null"
        android:layout_width="@dimen/skin_selection_size"
        android:layout_height="@dimen/skin_selection_size"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:layout_marginStart="@dimen/skin_margin_side"
        android:layout_marginTop="@dimen/skin_margin_between"
        android:layout_below="@id/button_skin_red"
        android:layout_toEndOf="@id/skin_selected_1" />

    <ImageButton
        android:id="@+id/button_skin_green"
        android:src="@drawable/player_green"
        android:background="@null"
        android:layout_width="@dimen/skin_selection_size"
        android:layout_height="@dimen/skin_selection_size"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:layout_marginStart="@dimen/skin_margin_side"
        android:layout_marginTop="@dimen/skin_margin_between"
        android:layout_below="@id/button_skin_yellow"
        android:layout_toEndOf="@id/skin_selected_1" />

    <ImageButton
        android:id="@+id/button_skin_blue"
        android:src="@drawable/player_blue"
        android:background="@null"
        android:layout_width="@dimen/skin_selection_size"
        android:layout_height="@dimen/skin_selection_size"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:layout_marginStart="@dimen/skin_margin_side"
        android:layout_marginTop="@dimen/skin_margin_between"
        android:layout_below="@id/button_skin_green"
        android:layout_toEndOf="@id/skin_selected_1" />

    <ImageButton
        android:id="@+id/button_skin_pink"
        android:src="@drawable/player_pink"
        android:background="@null"
        android:layout_width="@dimen/skin_selection_size"
        android:layout_height="@dimen/skin_selection_size"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:layout_marginStart="@dimen/skin_margin_side"
        android:layout_marginTop="@dimen/skin_margin_side"
        android:layout_toEndOf="@id/button_skin_red" />

    <ImageButton
        android:id="@+id/button_skin_orange"
        android:src="@drawable/player_orange"
        android:background="@null"
        android:layout_width="@dimen/skin_selection_size"
        android:layout_height="@dimen/skin_selection_size"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:layout_marginStart="@dimen/skin_margin_side"
        android:layout_marginTop="@dimen/skin_margin_between"
        android:layout_below="@id/button_skin_red"
        android:layout_toEndOf="@id/button_skin_yellow" />

    <ImageButton
        android:id="@+id/button_skin_turquoise"
        android:src="@drawable/player_turquoise"
        android:background="@null"
        android:layout_width="@dimen/skin_selection_size"
        android:layout_height="@dimen/skin_selection_size"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:layout_marginStart="@dimen/skin_margin_side"
        android:layout_marginTop="@dimen/skin_margin_between"
        android:layout_below="@id/button_skin_orange"
        android:layout_toEndOf="@id/button_skin_yellow" />

    <ImageButton
        android:id="@+id/button_skin_purple"
        android:src="@drawable/player_purple"
        android:background="@null"
        android:layout_width="@dimen/skin_selection_size"
        android:layout_height="@dimen/skin_selection_size"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:layout_marginStart="@dimen/skin_margin_side"
        android:layout_marginTop="@dimen/skin_margin_between"
        android:layout_below="@id/button_skin_turquoise"
        android:layout_toEndOf="@id/button_skin_yellow" />

</RelativeLayout>